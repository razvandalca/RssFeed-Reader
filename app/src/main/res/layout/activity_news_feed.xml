<?xml version="1.0" encoding="utf-8"?><com.razvan.stritiromania.Views.NewsFeedLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    xmlns:ads="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".Activities.NewsFeedActivity"    ><TextView    android:id="@+id/internetConnectionBar"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@color/noInternet_red"    android:text="NO INTERNET"    android:textStyle="bold"    android:textColor="@color/noInternet_textWhite"    android:visibility="gone"/>    <ListView    android:id="@+id/listView"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:divider="@null"    android:dividerHeight="15dp"    android:scrollbars="none"    android:paddingLeft="8dp"    android:paddingRight="8dp"    android:layout_above="@+id/adView"    android:layout_below="@+id/internetConnectionBar"/>    <ProgressBar        android:id="@+id/loadingBar"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerInParent="true"        android:indeterminate="true"        android:visibility="gone"/>    <com.google.android.gms.ads.AdView        android:id="@+id/adView"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_centerHorizontal="true"        android:layout_alignParentBottom="true"        ads:adSize="SMART_BANNER"        ads:adUnitId="@string/addID">    </com.google.android.gms.ads.AdView></com.razvan.stritiromania.Views.NewsFeedLayout>